<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_message" />

    <Button
        android:id="@+id/myButton"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginBottom="50dp"
        android:text="@string/button_message" />

    <CheckBox
        android:id="@+id/checkBoxCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you drink coffee?" />

    <EditText
        android:id="@+id/myedittext"
        android:layout_width="225dp"
        android:layout_height="90dp"
        android:hint="@string/hinttext"
        android:text="@string/editmessage" />

    <Switch
        android:id="@+id/switchCoffee"
        android:layout_width="383dp"
        android:layout_height="50dp"
        android:text="Do you drink coffee?"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <RadioButton
        android:id="@+id/radioButtonCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you drink coffee?" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_algonquin" />

    <ImageButton
        android:id="@+id/buttonImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Algonquin College Logo"
        android:src="@drawable/logo_algonquin" />

</LinearLayout>